{
  "name": "recognition-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run watch:functions\" \"npm run serve:local\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "watch:functions": "nodemon --watch functions --ext ts --exec \"npm run build:functions\"",
    "build:functions": "tsc -p functions/tsconfig.json",
    "serve:local": "node -r esbuild-register src/local-server.ts",
    "deploy:functions": "appwrite functions deploy",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "node-appwrite": "^20.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.0",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.0",
    "zod": "^3.22.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.0",
    "sharp": "^0.32.0",
    "pdf-lib": "^1.17.0",
    "csv-writer": "^1.6.0",
    "nodemailer": "^6.9.0",
    "redis": "^4.6.0",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/nodemailer": "^6.4.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "esbuild": "^0.19.0",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}