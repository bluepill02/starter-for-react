# Appwrite Configuration for Production
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://api.yourdomain.com/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=recognition-prod

# Database Configuration
NEXT_PUBLIC_DATABASE_ID=recognition-db
NEXT_PUBLIC_RECOGNITION_COLLECTION_ID=recognitions
NEXT_PUBLIC_USER_COLLECTION_ID=users
NEXT_PUBLIC_TEAM_COLLECTION_ID=teams
NEXT_PUBLIC_ABUSE_FLAGS_COLLECTION_ID=abuse-flags
NEXT_PUBLIC_AUDIT_COLLECTION_ID=audit-log

# Storage Configuration
NEXT_PUBLIC_STORAGE_BUCKET_ID=evidence

# API Configuration
NEXT_PUBLIC_API_ENDPOINT=https://api.yourdomain.com
NEXT_PUBLIC_FUNCTIONS_ENDPOINT=https://api.yourdomain.com/v1/functions

# Application Configuration
NEXT_PUBLIC_APP_NAME=Recognition System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_FEATURE_EVIDENCE_UPLOAD=true
NEXT_PUBLIC_FEATURE_MANAGER_VERIFICATION=true
NEXT_PUBLIC_FEATURE_EXPORT_PDF=true
NEXT_PUBLIC_FEATURE_INTEGRATIONS=true
NEXT_PUBLIC_FEATURE_ABUSE_DETECTION=true
NEXT_PUBLIC_FEATURE_ADMIN_OVERRIDE=true

# OAuth Configuration - REPLACE WITH YOUR PRODUCTION CREDENTIALS
NEXT_PUBLIC_GOOGLE_CLIENT_ID=YOUR_PROD_GOOGLE_CLIENT_ID_HERE
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=YOUR_PROD_MICROSOFT_CLIENT_ID_HERE

# OAuth Redirect URIs
NEXT_PUBLIC_OAUTH_REDIRECT_URI=https://yourdomain.com/auth/callback

# UI Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md
NEXT_PUBLIC_MAX_RECOGNITION_LENGTH=1000
NEXT_PUBLIC_MIN_RECOGNITION_LENGTH=20
NEXT_PUBLIC_MAX_TAGS=3

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ta
NEXT_PUBLIC_TAMIL_FIRST=true

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_KEY=YOUR_ANALYTICS_KEY_HERE

# Security
NEXT_PUBLIC_SECURE_COOKIES=true
NEXT_PUBLIC_SAME_SITE=Strict
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
